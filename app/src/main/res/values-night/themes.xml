<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Quotes_app" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/btn_color_dark</item>
        <item name="colorOnPrimary">@color/background_dark</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/notification_btn_dark</item>
        <item name="colorSecondaryVariant">@color/notification_btn_dark</item>
        <item name="colorOnSecondary">@color/btn_color_dark</item>
<!--        <item name="colorOnTertiary">@color/white</item>-->
        <item name="colorOnTertiary">@color/navbar_dark</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorOnPrimary</item>
        <!-- Customize your theme here. -->
        <item name="materialButtonStyle">@style/button_theme</item>
    </style>

    //button theme
    <style name="button_theme" parent="@style/Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/btn_color_dark</item>
    </style>
</resources>